{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": "on saturday",
  "labels": ["renovate"],
  "packageRules": [
    {
      "groupName": "major dependencies",
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"]
    },
    {
      "groupName": "minor dependencies",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance"],
      "labels": ["UPDATE-BELOW-THE-MINOR"],
      "automerge": true
    }
  ]
}
